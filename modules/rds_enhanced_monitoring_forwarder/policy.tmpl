{
  "Version": "2012-10-17",
  "Statement": [{
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:ListTagsLogGroup",
        "logs:PutLogEvents"%{ if vpc_check },
        "ec2:CreateNetworkInterface",
        "ec2:DescribeNetworkInterfaces",
        "ec2:DeleteNetworkInterface"%{ endif }
      ],
      "Effect": "Allow",
      "Resource": "*",
      "Sid": "WriteLogs"
    },
    {
      "Action": "kms:Decrypt",
      "Effect": "Allow",
      "Resource": "*",
      "Sid": "KmsDecrypt"
    }%{ if dd_api_key_secret_arn != "" },
    {
      "Action": "secretsmanager:GetSecretValue",
      "Effect": "Allow",
      "Resource": "${dd_api_key_secret_arn}",
      "Sid": "GetApiKeySecret"
    }%{ endif }%{ if dead_letter_config_target_arn != "" },
    {
      "Action": "sqs:SendMessage",
      "Effect": "Allow",
      "Resource": "${dead_letter_config_target_arn}",
      "Sid": "SqsSendMessageDeadLetterConfig"
    }%{ endif }
  ]
}
